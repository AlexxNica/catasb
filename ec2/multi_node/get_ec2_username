
GROUPVARS_FILE="../../ansible/group_vars/all.yml"
DEPLOY_ORIGIN=`./parse_yaml.py -f ${GROUPVARS_FILE} -o`
if [ "${DEPLOY_ORIGIN}" == "True" ]; then
  export EC2_USER="centos"
else
  export EC2_USER="ec2-user"
fi

# Check if deploy_origin was set differently in 'my_vars.yml'
MYVARS_FILE="../../config/my_vars.yml"
DEPLOY_ORIGIN=`./parse_yaml.py -f ${MYVARS_FILE} -o`
if [ "${DEPLOY_ORIGIN}" == "True" ]; then
  export EC2_USER="centos"
fi
